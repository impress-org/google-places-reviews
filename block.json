{
    "$schema": "https://json.schemastore.org/block.json",
    "apiVersion": 2,
    "name": "google-places-reviews/reviews",
    "title": "Reviews Block for Google",
    "category": "widgets",
    "icon": "star-filled",
    "description": "Easily display Google Reviews on your WordPress website using a powerful and intuitive widget.",
    "textdomain": "google-places-reviews",
    "editorScript": "file:./build/google-block.js",
    "editorStyle": "file:./build/google-block.css",
    "style": [
        "file:./build/style-google-block.css",
        "google-block-styles"
    ],
    "attributes": {
        "placeId": {
            "type": "string",
            "default": ""
        },
        "placeType": {
            "type": "string",
            "default": ""
        },
        "location": {
            "type": "string",
            "default": ""
        },
        "showHeader": {
            "type": "boolean",
            "default": true
        },
        "mediaId": {
            "type": "integer",
            "default": 0
        },
        "mediaUrl": {
            "type": "string",
            "default": ""
        },
        "showBusinessRating": {
            "type": "boolean",
            "default": true
        },
        "showReviewButton": {
            "type": "boolean",
            "default": true
        },
        "showBusinessMeta": {
            "type": "boolean",
            "default": true
        },
        "showBusinessInfo": {
            "type": "boolean",
            "default": true
        },
        "showPhone": {
            "type": "boolean",
            "default": true
        },
        "showHours": {
            "type": "boolean",
            "default": true
        },
        "showLocation": {
            "type": "boolean",
            "default": true
        },
        "showReviews": {
            "type": "boolean",
            "default": true
        },
        "reviewLines": {
            "type": "integer",
            "default": 3
        },
        "preview": {
            "type": "boolean",
            "default": false
        }
    }
}
